<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="login-container">
        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
          required: false,
          autofocus: true,
          input_html: { autocomplete: "email", class: "round-corners" } %>
          <%= f.input :password,
          required: false,
          input_html: { autocomplete: "current-password", class: "round-corners" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-block btn-login" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5 offset-md-7">
      <%= render 'shared/subs' %>
    </div>
  </div>
</div>
