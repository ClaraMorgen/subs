<div class="form-new">

  <%# link_to subscriptions_path, remote: true, id: "close-button", class: "text-left" do %>
    <i class="fas fa-times-circle", id="close-button"></i>
  <%# end %>

<%= simple_form_for(@subscription) do |f| %>
  <div class="row">
  <%= f.input :title, wrapper_html: {class: "col"}, input_html: { class: "input-field" }, placeholder: "Title", label: false %>
  </div>
  <div class="row">
  <%= f.input :due_date, wrapper_html: {class: "col"} %>
  <%= f.input :end_date, wrapper_html: {class: "col"} %>
  </div>
  <div class="row">
  <%= f.input :category_id, wrapper_html: {class: "col"}, input_html: { class: "input-field" }, placeholder: "Category", label: false %>
  <%= f.input :bank_account_id, wrapper_html: {class: "col"}, input_html: { class: "input-field" }, placeholder: "Bank Account", label: false %>
  </div>
  <div class="row">
  <%= f.input :amount_cents, wrapper_html: {class: "col"}, input_html: { class: "input-field" }, placeholder: "Price", label: false %>
  </div>
  <div class="row">
  <%= f.button :submit, class: "new-sub-form-button" %>
  </div>
<% end %>
</div>
